---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Let's Talk";
const pageDescription = "Get in touch with Dickens & Ballsworth for bookings, collaborations, or questions.";
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="contact-section container" style="padding: var(--space-3xl) 0;">
    <h1>Drop Us A Line</h1>

    <div class="contact-content">
      <div class="contact-form-wrapper">
        <h2 class="form-heading">Send Message</h2>

        <form class="contact-form" method="POST" action="https://formspree.io/f/mlgdbyzp">
          <div class="form-group">
            <input
              type="text"
              name="name"
              placeholder="Name"
              required
              class="form-input"
            >
          </div>

          <div class="form-group">
            <input
              type="email"
              name="email"
              placeholder="Email*"
              required
              class="form-input"
            >
          </div>

          <div class="form-group">
            <textarea
              name="message"
              placeholder="Message"
              rows="6"
              required
              class="form-input form-textarea"
            ></textarea>
          </div>

          <button type="submit" class="btn btn-submit">Send</button>
        </form>

        <p class="form-notice">
          This site is protected by reCAPTCHA and the Google
          <a href="https://policies.google.com/privacy" target="_blank">Privacy Policy</a> and
          <a href="https://policies.google.com/terms" target="_blank">Terms of Service</a> apply.
        </p>
      </div>

      <div class="bookings-section">
        <h2>Bookings</h2>
        <p>Do you have questions, want to book a show, or collaborate on a new piece?</p>
        <p>Reach out, and let's make magic happen.</p>
        <p style="margin-top: var(--space-lg);">Call or txt us anytime!</p>
        <p class="band-name">Dickens & Ballsworth</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .contact-form-wrapper {
    margin-bottom: var(--space-3xl);
  }

  .form-heading {
    font-family: var(--font-primary);
    font-size: var(--font-size-lg);
    text-align: center;
    color: var(--color-text-dark);
    text-transform: none;
    margin-bottom: var(--space-xl);
    font-weight: normal;
  }

  .contact-form {
    max-width: 600px;
    margin: 0 auto;
  }

  .form-group {
    margin-bottom: var(--space-md);
  }

  .form-input {
    width: 100%;
    padding: var(--space-md);
    font-family: var(--font-primary);
    font-size: 1rem;
    border: 1px solid #ddd;
    border-radius: 0;
    transition: border-color var(--transition-fast);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-brand-pink);
  }

  .form-input::placeholder {
    color: #999;
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .btn-submit {
    display: block;
    margin: var(--space-xl) auto;
    min-width: 150px;
    font-size: var(--font-size-lg);
    padding: var(--space-md) var(--space-xl);
  }

  .form-notice {
    text-align: center;
    font-size: 0.875rem;
    color: var(--color-text-body);
    margin-top: var(--space-lg);
  }

  .form-notice a {
    color: var(--color-brand-pink);
    text-decoration: none;
  }

  .form-notice a:hover {
    text-decoration: underline;
  }

  .bookings-section {
    text-align: center;
    padding: var(--space-xl);
    background-color: var(--color-off-white);
    border-radius: 4px;
  }

  .bookings-section h2 {
    margin-bottom: var(--space-lg);
  }

  .bookings-section p {
    color: var(--color-text-body);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-sm);
  }

  .band-name {
    font-weight: 600;
    color: var(--color-text-dark);
    margin-top: var(--space-lg);
  }

  @media (max-width: 768px) {
    .form-input {
      padding: var(--space-sm);
    }

    .btn-submit {
      width: 100%;
    }
  }
</style>
